<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Buttons -->
    <style name="ButtonPrimary" parent="Theme.TestProject">
        <item name="android:background">@drawable/shape_button_primary_action</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/amorsansprobold</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="ButtonSecondary" parent="Theme.TestProject">
        <item name="android:background">@drawable/shape_button_secondary_action</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:fontFamily">@font/amorsansprobold</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!-- Texts -->

    <style name="TitleBold" parent="Theme.TestProject">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="fontFamily">@font/amorsansprobold</item>
    </style>

    <!-- EditTexts -->
    <style name="YastasVentas.EditText" parent="Theme.TestProject">
        <item name="fontFamily">@font/amorsanspro</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SheetDialog" parent="Theme.TestProject">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>